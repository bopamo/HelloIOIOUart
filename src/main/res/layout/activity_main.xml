<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_label"
        />

    <ToggleButton
        android:id="@+id/ToggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textOff="LED is OFF"
        android:textOn="LED is BLINKING"
        android:onClick="tglOnClick"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="btnSecondOnClick"
        android:text="Go To Second Activity"/>

    <TextView
        android:text="Recieved from inQueue1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tvRxLabel" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/tvRxData1"
         />

    <TextView
        android:text="Send to outQueue1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tvTxLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/etTxData1"
        />

<Button
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight = "1.5"
    android:text="Send"
    android:onClick="btnSendOnClick"
    android:id="@+id/btnSend1"/>


</LinearLayout>